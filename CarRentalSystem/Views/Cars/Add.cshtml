@model CarFormModel

@{
    ViewBag.Title = "Add Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <form method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Make"></label>
                <input asp-for="Make" class="form-control" placeholder="Make">
            </div>
            <div class="mb-3">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Model">
            </div>
            <div class="mb-3">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" placeholder="Color">
            </div>
            <div class="mb-3">
                <label asp-for="IsAvailable"></label>
                <input asp-for="IsAvailable" class="form-control" placeholder="Is car available">
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Create" />
    </form>
</div>